		<div class="row row--justify-center">
			<div class="col col--10@xl">
				{{ post.get_field('main_content') }}

			</div>
		</div>
	</div>
</section>
<section class="colour--white bg--sapphire dbl-pad-top dbl-pad-bot" id="apply">
	<div class="container">
		<div class="row row--justify-center">
			<div class="col col--10@xl">
				<p class="h2">Application Form</p><br/><br/>
				{{ function('do_shortcode', '[contact-form-7 id="2505" title="Job Application Form"]') }}
