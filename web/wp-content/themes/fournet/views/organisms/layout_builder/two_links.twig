<section {% include 'helpers/section_id.twig' with { 'id': content.layout_settings.section_options.id } %} class="case-study-testimonials {% include 'helpers/section_classes.twig' with { 'options': content.layout_settings.section_options } %}">
  <div class="container">
    {% if content.intro %}
    <div class="row row--pad-bot row--justify-center">
      <div class="col col--6@xl text--center">
        <p class="h2">{{ content.intro }}</p>
      </div>
    </div>
    {% endif %}
    <div class="row row--pad-bot case-study-testimonials__row">
      {% for panel in content.panels %}
      <div class="case-study-testimonials__col">
        {% include 'molecules/testimonial_card.twig' with {
          'content': panel,
          'background': 'bg--' ~ panel.background_colour,
          'text': panel.text_colour,
        } %}
      </div>
      {% endfor %}
    </div>

    {% if content.buttons|length %}
    <div class="row row--justify-center row--pad-top text--center">
      {% include 'molecules/button_group.twig' with {
        'buttons': content.buttons
      } %}
    </div>

    {% endif %}
  </div>

  {% include 'helpers/styled_background.twig' with { 'options': content.layout_settings.section_options } %}
</section>
