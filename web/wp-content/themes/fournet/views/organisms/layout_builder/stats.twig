<section {% include 'helpers/section_id.twig' with { 'id': content.layout_settings.section_options.id } %} class="{% include 'helpers/section_classes.twig' with { 'options': content.layout_settings.section_options } %}">
  <div class="container">
    {% if content.title or content.intro %}
    <div class="row row--pad-bot">
      <div class="col col--5@xl mb-4">
        <p class="h2">{{ content.title }}</p>
        <p>{{ content.intro }}</p>
      </div>
    </div>
    {% endif %}
    <div class="row row--pad-bot">
      {% for stat in content.stats %}
      <div class="col col--6@xs col--6@med col--3@xl">
        {% if stat.description %}
        <div class="stat-card stat-card--show">
          <p class="stat-card__figure h1 reset-mar">{{ stat.figure }}</p>
          <p class="stat-card__label">{{ stat.label }}</p>
          <p class="stat-card__description">{{ stat.description }}</p>
        </div>
        {% else %}
        <div class="stat-card">
          <p class="stat-card__figure h1 reset-mar">{{ stat.figure }}</p>
          <p class="stat-card__label">{{ stat.label }}</p>
          <p class="stat-card__description">{{ stat.description }}</p>
        </div>
        {% endif %}
      </div>
      {% endfor %}
    </div>

    {% if content.buttons|length %}
    <div class="row row--justify-center row--pad-top text--center">
      {% include 'molecules/button_group.twig' with {
        'buttons': content.buttons
      } %}
    </div>

    {% endif %}
  </div>
  {% include 'helpers/styled_background.twig' with { 'options': content.layout_settings.section_options } %}
</section>
