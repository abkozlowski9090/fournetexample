<section {% include 'helpers/section_id.twig' with { 'id': content.layout_settings.section_options.id } %} class="brochure-bar {% include 'helpers/section_classes.twig' with { 'options': content.layout_settings.section_options } %} {{ (class_list) ? class_list : '' }}">
  <div class="container">
    <div class="row row--align-center row--justify-between">
      <div class="col col--6@xl {{ (text_colour) ? text_colour : '' }}">
        <p class="h2">{{ content.title }}</p>
      </div>
        <div class="col col--6@xl">
          {% include 'molecules/button_group.twig' with {
            'buttons': content.buttons,
            'class_list': 'button-group--right'
          } %}
        </div>
      </div>
    </div>
  </div>
  {% include 'helpers/styled_background.twig' with { 'options': content.layout_settings.section_options } %}
</section>
