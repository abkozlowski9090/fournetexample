<section {% include 'helpers/section_id.twig' with { 'id': content.layout_settings.section_options.id } %} class="{% include 'helpers/section_classes.twig' with { 'options': content.layout_settings.section_options } %}">
  <div class="container">
    {% if content.row_center %}
    <div class="row row--justify-center text--center mb-2">
      <div class="col">
        <p class="h2">{{content.section_title}}</p>
      </div>
  </div>
    {% else %}
    <div class="row mb-2">
      <div class="col">
        <p class="h2">{{content.section_title}}</p>
      </div>
  </div>
  {% endif %}
    <div class="row">
      {% for card in content.image_and_text_cards %}
        <div class="col col--4@med">
          {% include "molecules/news-card.twig" with {
            'post_info': {
              'post_title': card.title,
              'excerpt': card.description,
              'image': card.image,
            },
            'large_card': false,
            'buttons': card.buttons
          } %}
        </div>
      {% endfor %}

    </div>
  </div>
  {% include 'helpers/styled_background.twig' with { 'options': content.layout_settings.section_options } %}
</section>
