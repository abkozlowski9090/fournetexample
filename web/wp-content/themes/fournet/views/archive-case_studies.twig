{% extends "base.twig" %}

{% block content %}


<section class="case-studies-header colour--white bg--sapphire">
	<div class="container">
		<div class="row">
			<div class="col col--6@xl">
				<h1>{{ function('__', 'Explore our customer success stories') }}</h1>
			</div>
		</div>
	</div>
</section>


<section class="case-studies-archive">
	<div class="container">
    <div class="row">
				{% for post in posts %}
	      	<div class="col col--6@med col--4@xl">
						{% include "molecules/news-card.twig" with {
							post_info: post,
							'buttons': [
								{
							      'button_style': 'btn--white',
							      'button': {
							        'url': post.link,
							        'title': function('__', 'View')
							      }
							  }
						  ]
						} %}
					</div>
        {% endfor %}
    </div>
	</div>
</section>


{% endblock %}
